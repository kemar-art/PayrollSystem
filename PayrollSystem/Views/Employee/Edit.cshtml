@model EmployeeEditViewModel


<div class="col-md-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item"><a asp-action="Index">Employee List</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Edit Employee</li>
                </ol>
            </nav><br /><br />
            <form method="post" enctype="multipart/form-data" asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="FirstName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="FirstName" class="form-control" placeholder="First Name" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                        <input asp-for="MiddleName" class="form-control" placeholder="Middle Name" />
                        <span asp-validation-for="MiddleName" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="LastName"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="LastName" class="form-control" placeholder="Last Name" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="EmployeeNo"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="EmployeeNo" class="form-control" readonly style="background-color:darkgray" />
                        <span asp-validation-for="EmployeeNo" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="DateJoined"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DateJoined" class="form-control" readonly style="background-color:darkgray" />
                        <span asp-validation-for="DateJoined" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="Gender"></label>
                    </div>
                    <div class="form-check col-md-3">
                        @*<select class="form-control" asp-for="Gender">
                        <option>Male</option>
                        <option>Female</option>
                        </select>*@
                        <input asp-for="Gender" type="radio" value="Male" /> Male
                        <input asp-for="Gender" type="radio" value="Female" /> Female
                        <span asp-validation-for="Gender" class="text-danger"></span>
                    </div>
                    <div class="col-md-2">
                    </div>
                    <div class="form-group col-md-2">
                        <label asp-for="DOB"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="DOB" class="form-control" placeholder="" />
                        <span asp-validation-for="DOB" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="NationalInsuranceScheme"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="NationalInsuranceScheme" class="form-control" placeholder="N.I.S" />
                        <span asp-validation-for="NationalInsuranceScheme" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="TaxRegistrationNumber"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="TaxRegistrationNumber" class="form-control" placeholder="" />
                        <span asp-validation-for="TaxRegistrationNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Email" class="form-control" placeholder="" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="PhoneNumber"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="PhoneNumber" class="form-control" placeholder="" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="PaymentMethod"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="PaymentMethod" class="form-select" asp-items="Html.GetEnumSelectList<PayrollSystem.Entity.PaymentMethod>()"></select>
                        <span asp-validation-for="PaymentMethod" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-2">
                        <label asp-for="Loan"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <select asp-for="DateJoined" class="form-select" asp-items="Html.GetEnumSelectList<PayrollSystem.Entity.Loan>()"></select>
                        <span asp-validation-for="DateJoined" class="text-danger"></span>
                    </div>
                </div>
                <div class="row">
                    <div class="form-group col-md-2">
                        <label asp-for="Designation"></label>
                    </div>
                    <div class="form-group col-md-3">
                        <input asp-for="Designation" class="form-control" placeholder="Role" />
                        <span asp-validation-for="Designation" class="text-danger"></span>
                    </div>
                    <div class="col-md-2"></div>
                    <div class="form-group col-md-1">
                        <label asp-for="ImageUrl"></label>
                    </div>
                    <div class="form-group col-md-4">
                        <div class="btn btn-primary btn-icon-text">
                            <i class="fa-solid fa-file-arrow-up"></i>
                            <input asp-for="ImageUrl" type="file" value="Upload" />
                            <span asp-validation-for="ImageUrl" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="Address"></label>
                    <input asp-for="Address" class="form-control" placeholder="Address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Parish"></label>
                    <input asp-for="Parish" class="form-control" placeholder="Parish" />
                    <span asp-validation-for="Parish" class="text-danger"></span>
                </div><br />
                <div class="form-group">
                    <button type="submit" class="btn btn-rounded btn-primary float-left"><i class="fa-solid fa-arrow-up-from-line" style="margin-right: 0.7em"></i> Update</button> &nbsp;
                    <a asp-action="Index" class="btn btn-rounded btn-dark float-right"><i class="fa-solid fa-circle-left" style="margin-right: 0.7em"> Back</i></a>
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }